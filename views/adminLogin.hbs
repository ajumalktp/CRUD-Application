<div class="container" onclick="onclick">
  <div class="top"></div>
  <div class="bottom"></div>
  <form action="/admin/adminLogin" method="post" id="formValidation">
    <div class="center">
      <h2>Admin Login</h2>
      <span class="error">{{error}}</span>
      <input type="email" placeholder="email" name="email" />
      <input type="password" placeholder="password" name="password" />
      <button type="submit">Login</button>
    </div>
  </form>
</div>
<script>
  $(document).ready(function () {
    $("#formValidation").validate({
      rules: {
        email:
          { required: true, email: true }, password: { required: true }
      }, messages: {
        email: {
          required: "Please enter your email",
          email: "Please enter a validemail address",
          remote: "User not found" 
          },
          password: { 
            required: "Pleaseenter your password",
            remote: "Incorrect password"
            }
          }, 
        }); 
      });
</script>
