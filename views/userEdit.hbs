

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<form class="form-horizontal" role="form" action="/edit-user" method="post" enctype="multipart/form-data">
<div class="container bootstrap snippets bootdey">
    <h1 class="text-primary">Edit User <span id="user-name">{{user.name}}</span></h1>
      <hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          {{#if user.image}}
          <img id="imagePreview" src="/image/{{user.image}}" class="avatar img-circle img-thumbnail" alt="avatar">
          {{else}}
           <img id="imagePreview" src="https://bootdey.com/img/Content/avatar/avatar7.png" class="avatar img-circle img-thumbnail" alt="avatar">
           {{/if}}
          <h6>Upload a different photo...</h6>
          
          <input type="file" class="form-control" id="image" name="image" accept="image/*" onchange="previewImage(event)" value="{{user.image}}">
        </div>
      </div>
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
          
        
        
        <p class="text-danger">{{error}}</p> 
      <input type="text" value="{{user._id}}" style="height: 0px; visibility:hidden" name="_id">
          <div class="form-group">
            <label class="col-lg-3 control-label">Username:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value="{{user.name}}" name="name">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" value="{{user.email}}" name="email">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Mobile No:</label>
            <div class="col-lg-8">
              <input class="form-control" type="number" value="{{user.phone}}" name="phone">
            </div>
          </div>
          <div class="form-group" style="margin-top: 20px;">
            <div class="col-lg-8">
          <button type="submit" class="btn btn-success" >Submit</button>
          </div>
          </div>
        </form>
      </div>
</div>
<hr>
<style>
    body{margin-top:20px;}
.avatar{
width:200px;
height:200px;
}			
#user-name{
  text-transform: uppercase;
}	 
</style>
<script>
    function previewImage(event) {
      const input = event.target;
      if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = function (e) {
          const imagePreview = document.getElementById('imagePreview');
          imagePreview.src = e.target.result;
        };
        reader.readAsDataURL(input.files[0]);
      }
    }

</script>
